<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack">

        <ImageView
            android:id="@+id/logo_greenflag"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"


            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logo_green_flag" />

        <TextView
            android:id="@+id/tv_center_main"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_greenflag"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/museosans_500"
            android:text="GreenFlag customers can create an account to access"

            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/check_text_box"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_center_main"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24sp"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/img_top_check"
                android:layout_width="24dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                app:srcCompat="@drawable/check_green" />

            <TextView
                android:id="@+id/tv_car_updates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14sp"
                android:layout_weight="1"
                android:fontFamily="@font/museosans_300"
                android:text="Car health updates"
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/check_text_box2"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_text_box"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12sp"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/img_mid_check"
                android:layout_width="24dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                app:srcCompat="@drawable/check_green" />

            <TextView
                android:id="@+id/tv_request_rescue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14sp"
                android:layout_weight="1"
                android:fontFamily="@font/museosans_300"
                android:text="Request a rescue online"
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/check_text_box3"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_text_box2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12sp"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/img_bottom_check"
                android:layout_width="24dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                app:srcCompat="@drawable/check_green"
                />

            <TextView
                android:id="@+id/tv_policy_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14sp"
                android:layout_weight="1"
                android:fontFamily="@font/museosans_300"
                android:text="Policy information"
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_create_account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="17dp"
            android:background="@drawable/btn_grad_green"
            android:fontFamily="@font/museosans_300"
            android:text="Create an account" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>