<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PgThree">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>


    <RelativeLayout
        android:id="@+id/layout_pg_three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        tools:layout_editor_absoluteX="-166dp"
        tools:layout_editor_absoluteY="-104dp">


        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="130dp"
            android:background="@color/colorWhite"
            android:ems="10"
            android:fontFamily="@font/museosans_300"
            android:inputType="textPersonName"
            android:text="Name"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/et_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="130dp"
            android:background="@color/colorWhite"
            android:ems="10"
            android:fontFamily="@font/museosans_300"
            android:inputType="textPersonName"
            android:text="Username"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_pw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/et_username"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="130dp"
            android:background="@color/colorWhite"
            android:ems="10"
            android:fontFamily="@font/museosans_300"
            android:inputType="textPassword"
            android:text="Name"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_photo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/et_pw"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="130dp"
            android:width="30dp"
            android:background="@drawable/btn_grad_green"
            android:maxWidth="25dp"
            android:text="Change Photo"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_age"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/btn_photo"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="130dp"
            android:background="@color/colorWhite"
            android:ems="10"
            android:fontFamily="@font/museosans_300"
            android:text="Age"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_birth_date"
            android:layout_width="match_parent"
            android:layout_marginRight="130dp"
            android:layout_height="50dp"
            android:layout_below="@id/et_age"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:ems="10"
            android:fontFamily="@font/museosans_300"
            android:text="Choose Birth Date"
            android:textSize="20sp"
            android:clickable="true"
            android:focusable="false"/>


        <EditText
            android:id="@+id/et_country"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/et_birth_date"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="130dp"
            android:background="@color/colorWhite"
            android:contextClickable="true"
            android:ems="10"
            android:fontFamily="@font/museosans_300"
            android:hint="Click here for country"
            android:inputType="text"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/r_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_country"
            android:layout_marginTop="10dp">


            <RadioButton
                android:id="@+id/rbtn_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorWhite"
                android:fontFamily="@font/museosans_300"
                android:text="Male"
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/rbtn_female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorWhite"
                android:fontFamily="@font/museosans_300"
                android:text="Female"
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/rbtn_not_specified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorWhite"
                android:fontFamily="@font/museosans_300"
                android:text="Not Specified"
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />

        </RadioGroup>
        <EditText
            android:id="@+id/et_postal_address"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/r_group"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:ems="10"
            android:fontFamily="@font/museosans_300"
            android:text="Postal Address"
            android:inputType="textPostalAddress"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_save_user"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Save"
            android:layout_toRightOf="@id/et_postal_address"
            android:layout_below="@id/r_group"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_grad_green"
            android:textColor="@color/colorBlack"
            />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>